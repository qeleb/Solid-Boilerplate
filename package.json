{
  "name": "solid-boilerplate",
  "version": "0.1.0",
  "description": "Solid Boilerplate",
  "author": "qeleb",
  "license": "UNLICENSED",
  "type": "module",
  "engines": {
    "node": ">=16.x"
  },
  "browserslist": {
    "production": [
      "firefox >=103",
      "chrome >=88",
      "safari >=14.1",
      "ios_saf >=14.5"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cjs,mjs,cts,mts}": "eslint --fix",
    "*.{css,scss,sass}": [
      "stylelint --fix",
      "prettier --write --list-different"
    ]
  },
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "build": "vite build",
    "build:analyze": "ANALYZE=true && vite build",
    "test": "vitest run --coverage",
    "test:ui": "vitest --coverage --ui",
    "lint": "eslint src && stylelint src/**/*.scss",
    "lint:fix": "eslint --fix src && stylelint --fix src/**/*.scss",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@solidjs/testing-library": "^0.8.4",
    "@testing-library/jest-dom": "^6.1.3",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitest/coverage-v8": "^0.34.5",
    "@vitest/ui": "^0.34.5",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-regexp": "^1.15.0",
    "eslint-plugin-solid": "^0.13.0",
    "eslint-plugin-testing-library": "^6.0.2",
    "eslint-plugin-vitest": "^0.3.1",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "^14.0.1",
    "postcss": "^8.4.30",
    "prettier": "^3.0.3",
    "rollup-plugin-visualizer": "^5.9.2",
    "sass": "^1.68.0",
    "stylelint": "^15.10.3",
    "stylelint-config-hudochenkov": "^9.0.0",
    "stylelint-config-recommended-scss": "^13.0.0",
    "stylelint-no-unsupported-browser-features": "^7.0.0",
    "stylelint-order": "^6.0.3",
    "terser": "^5.20.0",
    "typescript": "5.1.6",
    "vite": "^4.4.9",
    "vite-plugin-checker": "^0.6.2",
    "vite-plugin-html": "^3.2.0",
    "vite-plugin-optimize-css-modules": "^1.0.4",
    "vite-plugin-sass-dts": "^1.3.11",
    "vite-plugin-solid": "^2.7.0",
    "vitest": "0.33.0"
  },
  "dependencies": {
    "@solidjs/router": "^0.8.3",
    "solid-js": "^1.7.12",
    "solidjs-use": "^2.3.0"
  },
  "packageManager": "yarn@3.6.3"
}
